<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:elevation="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="start"
            android:orientation="horizontal">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:gravity="center">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleTextV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/iransansmobile"
                    android:maxLines="3"
                    android:text="بخشنامه به کلیه شرکت ها در مورد "
                    android:textColor="#000" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/dateTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/iransansnum"
                    android:text="۱۳۹۸/۰۱/۰۱"
                    android:textColor="#7E7B7B" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/authorTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/iransansmobile"
                    android:text="نویسنده:"
                    android:textColor="#7E7B7B"
                    android:textSize="12dp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/iransansmobile"
                    android:text="نویسنده"
                    android:textColor="#7E7B7B"
                    android:textSize="12dp" />

            </android.support.design.widget.CoordinatorLayout>

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/img_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground" />
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>