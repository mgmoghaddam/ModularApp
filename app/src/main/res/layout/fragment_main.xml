<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LogoLny"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/LogoLny"
        android:layout_margin="10dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/notifications"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="6dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/fontawsome"
                        android:gravity="center"
                        android:text="bullhorn"
                        android:textColor="#FF9800"
                        android:textSize="45dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="17dp"
                        android:autoSizeMinTextSize="15dp"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/iransansnum"
                        android:gravity="center"
                        android:text="اطلاعیه ها"
                        android:textColor="#000"
                        android:textSize="17dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/fontawsome"
                        android:gravity="center"
                        android:text="newspaper"
                        android:textColor="#FF9800"
                        android:textSize="45dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="17dp"
                        android:autoSizeMinTextSize="15dp"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/iransansnum"
                        android:gravity="center"
                        android:text="اخبار"
                        android:textColor="#000"
                        android:textSize="17dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/products"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="6dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/fontawsome"
                        android:gravity="center"
                        android:text="compact-disc"
                        android:textColor="#FF9800"
                        android:textSize="45dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="17dp"
                        android:autoSizeMinTextSize="15dp"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/iransansnum"
                        android:gravity="center"
                        android:text="محصولات"
                        android:textColor="#000"
                        android:textSize="17dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/projects"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="6dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/fontawsome"
                        android:gravity="center"
                        android:text="drafting-compass"
                        android:textColor="#FF9800"
                        android:textSize="45dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="17dp"
                        android:autoSizeMinTextSize="15dp"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/iransansnum"
                        android:gravity="center"
                        android:text="پروژه ها"
                        android:textColor="#000"
                        android:textSize="17dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/articles"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="6dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/fontawsome"
                        android:gravity="center"
                        android:text="comment-alt-edit"
                        android:textColor="#FF9800"
                        android:textSize="45dp"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="17dp"
                        android:autoSizeMinTextSize="15dp"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/iransansnum"
                        android:gravity="center"
                        android:text="مقالات"
                        android:textColor="#000"
                        android:textSize="17dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/gallery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="6dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/fontawsome"
                        android:gravity="center"
                        android:text="images"
                        android:textColor="#FF9800"
                        android:textSize="45dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="17dp"
                        android:autoSizeMinTextSize="15dp"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/iransansnum"
                        android:gravity="center"
                        android:text="تصاویر و ویدیو ها"
                        android:textColor="#000"
                        android:textSize="17dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/contactUs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="6dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/fontawsome"
                        android:gravity="center"
                        android:text="phone-office"
                        android:textColor="#FF9800"
                        android:textSize="45dp"
                        android:layout_marginRight="-95dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="17dp"
                        android:autoSizeMinTextSize="15dp"
                        android:background="@color/buttonColor"
                        android:fontFamily="@font/iransansnum"
                        android:gravity="center"
                        android:text="تماس با ما"
                        android:textColor="#000"
                        android:textSize="17dp"
                        android:layout_marginRight="50dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>