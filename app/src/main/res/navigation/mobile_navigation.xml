<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/recyclerForType1"
        android:name="ir.pishrosoft.modularapp.RecyclerForType1"
        android:label="recycler_main"
        tools:layout="@layout/recycler_main">
        <action
            android:id="@+id/action_recyclerForType12_to_mainFragment"
            app:destination="@+id/mainFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/mainFragment" />
        <argument
            android:name="Title"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="اخبار" />
    </fragment>
    <fragment
        android:id="@+id/webViewFragment"
        android:name="ir.pishrosoft.modularapp.WebViewFragment"
        android:label="fragment_webview"
        tools:layout="@layout/fragment_webview" >
        <action
            android:id="@+id/action_webViewFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="ir.pishrosoft.modularapp.MainFragment"
        android:label="mainFragment"
        tools:layout="@layout/main_fragment_recycler">
        <action
            android:id="@+id/action_mainFragment_to_recyclerForType1"
            app:destination="@id/recyclerForType1"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_mainFragment_to_webViewFragment"
            app:destination="@id/webViewFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_mainFragment_to_recyclerForType2"
            app:destination="@id/recyclerForType2"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/recyclerForType2"
        android:name="ir.pishrosoft.modularapp.RecyclerForType2"
        android:label="recycler_for_type2"
        tools:layout="@layout/recycler_for_type2" >
        <action
            android:id="@+id/action_recyclerForType2_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="Title"
            app:argType="string"
            android:defaultValue="پروژه ها" />
    </fragment>
</navigation>